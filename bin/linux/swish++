#!/bin/sh

#
# wrapper script around statically linked wish(1) (with blt and tix included)
# to locate suitable include files.
#

path=`dirname $0`
if [ "{path}" = "." ]; then
  path=`pwd`
fi
home=`echo $path | sed "s@/bin/linux@@"`
TCL_LIBRARY=${home}/lib/tcl8.3
BLT_LIBRARY=${home}/lib/blt2.4
export TCL_LIBRARY
export BLT_LIBRARY

if [ -f ${home}/lib/XKeysymDB ]; then
  XKEYSYMDB=${home}/lib/XKeysymDB
  export XKEYSYMDB
fi

exec ${path}/.swish++ $*
