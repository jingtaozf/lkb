#!/bin/sh

#
# wrapper script around statically linked wish(1) (with blt and tix included)
# to locate suitable include files.
#

binary=`basename $0`
path=`dirname $0`

if [ "{path}" = "." ]; then
  path=`pwd`
fi
home=`echo $path | sed "s@/bin/solaris@@"`
TCL_LIBRARY=${home}/lib/tcl8.0
BLT_LIBRARY=${home}/lib/blt2.4
export TCL_LIBRARY
export BLT_LIBRARY

if [ -f ${home}/lib/XKeysymDB ]; then
  XKEYSYMDB=${home}/lib/XKeysymDB
  export XKEYSYMDB
fi

exec ${path}/.${binary} $*
