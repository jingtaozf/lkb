undim_full_rule := mrs_rule &
 [ INPUT.LISZT <! _full_rel &
                    [ HANDEL #h1,
                      DIM #d2,
                      ARG #x3 ] !>,

  OUTPUT.LISZT <! _full_rel &
                    [ HANDEL #h1,                      
                      ARG #x3 ] !>  ].

