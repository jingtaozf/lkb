get_back_together_rule := mrs_rule &
 [ INPUT [ LISZT <! _get_state_rel &
                 [ HANDEL #h1,
                   EVENT #e2,
                   ARG3 #x3,
                   ARG2 #e4 ],          
                  support_rel &
                 [ HANDEL #h1,
                   EVENT #e4 ],
		  _back_adv_rel &
		 [ ARG #e3 ],
                  _together_rel &
                 [ HANDEL #h6,
		   ARG #x3 ] !>,
	   H-CONS <! [ SC-ARG #h1,	
		       CANDS <! #h6 !> ],
                     [ SC-ARG #h1,
		       OUTSCPD #h6 ] !> ],
  OUTPUT [ LISZT <!  _get_together_rel &
                   [ HANDEL #h1,
                     EVENT #e2,
                     ARG1 #x3 ],
		  _back_adv_rel &
		 [ HANDEL #h1,
		   ARG #e3 ] !>,
	   H-CONS <! !> ] ] .

