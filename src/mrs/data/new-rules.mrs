intersect_hcons_rule1 := mrs_rule &
 [ INPUT.H-CONS <! [ SC-ARG #h1,	
		     CANDS <! #h3 !> ],
                   [ SC-ARG #h1,	
		     CANDS <! #h2,#h4 !> ]  !>,
   OUTPUT.H-CONS <! [ SC-ARG #h1,
         	      CANDS <! #h2,#h3,#h4 !> ] !> ].

