[ NEEDS-AFFIX true,
  ARGS [ FIRST [ AFFIX 2nd-plur-verb ]]].

1conj-3rd-plur-verb_infl_rule := 
%suffix (ar an)
pres-verb-lex-rule &
[ NEEDS-AFFIX true,
  ARGS [ FIRST [ AFFIX 3rd-plur-verb ]]].

